general {
        colors = true
        interval = 5
}

#order += "disk /"
order += "wireless _first_"
#order += "ethernet _first_"
order += "load"
order += "cpu_usage"
order += "memory"
#order += "cpu_temperature 0"
#order += "cpu_temperature 1"
order += "volume master"
order += "read_file brightness"
order += "battery all"
order += "tztime local"

#disk "/" {
#        format = "%avail"
#}

wireless _first_ {
        format_up = "ğŸ“¶ (%quality at %essid, %bitrate) %ip "
        format_down = "ğŸ“¶ down "
}

#ethernet _first_ {
        # if you use %speed, i3status requires root privileges
#        format_up = "E: %ip (%speed)"
#        format_down = "E: down"
#}

load {
        format = " %1min "
}

memory {
	format = " ğŸ‘ %used "
	threshold_degraded = "10%"
	format_degraded = "MEMORY: %free"
}

cpu_usage {
	format = " ğŸ’» %usage "
}

cpu_temperature 0 {
	format = "T0: %degrees C"
	path = "/sys/bus/platform/devices/coretemp.0/hwmon/hwmon5/temp2_input"
}

cpu_temperature 1 {
	format = "T1: %degrees C"
	path = "/sys/bus/platform/devices/coretemp.0/hwmon/hwmon5/temp3_input"
}

volume master {
        format = " ğŸ“£ %volume "
        format_muted = "â™ª: muted (%volume)"
        device = "pulse"
}

read_file brightness {
  	format = " ğŸ’¡ %content "
    	path = "/sys/class/backlight/intel_backlight/brightness"
}

battery all {
        format = " %status %percentage %remaining "
	status_chr = "âš¡ CHR"
	status_bat = "ğŸ”‹ BAT"
	status_unk = " ğŸ”Œ UNK" # because that's what the status is on AC power
	status_full = "âœ¨ FULL"
	integer_battery_capacity = true
	last_full_capacity = true
}

tztime local {
        format = " â° %Y-%m-%d %H:%M:%S"
}


